@model NoteViewModel
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<h1>Add Note/Comment</h1>

<table class="table">
    <thead>
        <tr>
            <th>Client ID</th>
            <th>Note ID</th>
            <th>Employee Comment</th>
            <th>Client Comment</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model.notesModels)
        {
            
            <tr>
                <td>@Model.ClientId</td>
                <td>@note.NoteId</td>
                <td>@note.EmployeeNote</td>
                <td>@note.ClientComment</td>
                <td>@note.Date.ToString("g")</td>
                <td>
                    <form asp-action="EditNotesView" method="get">
                        <input type="hidden" name="ClientId" asp-for="ClientId" value="@Model.ClientId" />
                        <input type="hidden" name="NoteId" asp-for="NoteId" value="@note.NoteId" />
                        <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="AddNote" method="post">
    <label>Note</label>
    <input type="hidden" name="ClientId" asp-for="ClientId" value="@Model.ClientId" />
    <textarea id="AddNote" name="EmployeeNote" class="form-control" asp-for="EmployeeNote"></textarea>
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary btn-sm" style="height: 38px;">Add Note</button>
        <a href="@Url.Action("ViewClient", "Client")" class="btn btn-secondary" style="height: 38px;">Cancel</a>
    </div>
</form>
