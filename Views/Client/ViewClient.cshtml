@model List<LoginPage.Models.ClientViewModel>

@{
    ViewData["Title"] = "View Clients";
}

<br />
<h2>List of Clients</h2>
<a class="btn btn-primary btn-sm" href="@Url.Action("Add", "Add")">Add Client</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Contact Number</th>
            <th>Address</th>
            <th>Client Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ClientId</td>
                    <td>@item.Title</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Email</td>
                    <td>@item.ContactNumber</td>
                    <td>@item.Address</td>
                    <td>@item.ClientType</td>
                    <td style="display: flex; gap: 5px; align-items: center;">
                        <a class="btn btn-primary btn-sm d-inline" href="@Url.Action("Notes", "Notes")?id=@item.ClientId" >Notes</a>
                        <a class="btn btn-primary btn-sm d-inline" href="@Url.Action("Edit", "Edit")?id=@item.ClientId">Edit</a>
                        <form asp-action="DeleteClient" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this client?');">
                            <input type="hidden" name="ID" value="@item.ClientId" />
                            <button type="submit" class="btn btn-primary btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>